{{> navbar}}
<div class="container">
	<h4>Scanner Admin</h4>
	{{#if scannerNum}}<h4>Current Scanner Connected {{ scannerNum }}</h4>{{/if}}

	<form action="/scanneradmin" method="post">
	  <div class="form-group">
	    <label>Event Name</label>
	    <select name="eventName" class="form-control">
		  	{{#each eventList}}
			<option>{{event_name}}</option>
			{{/each}}
		</select>
	  </div>
	  <div class="form-group">
	    <label for="exampleInputEmail1">Scanner Location</label>
	    <input name="scannerLocation" type="text" class="form-control" placeholder="Scanner Location">
	  </div>
	  <div class="form-group">
	    <label for="exampleInputEmail1">Scanner location lattiude</label>
	    <input name="scannerLat" type="text" class="form-control" placeholder="Scanner lattiude">
	  </div>
	   <div class="form-group">
	    <label for="exampleInputEmail1">Scanner location longtitude</label>
	    <input name="scannerLon" type="text" class="form-control" placeholder="Scanner longtitude">
	  </div>
	  <button type="submit" class="btn btn-default">Submit</button>
	</form>
</div>